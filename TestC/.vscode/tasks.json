{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build all files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.c",        // Asegúrate de compilar main.c
                "${workspaceFolder}/cethreads.c",   // Asegúrate de compilar cethreads.c
                "-o",
                "${workspaceFolder}/main",          // El archivo ejecutable que se generará
                "-lpthread"                         // Si es necesario, enlaza con pthread (aunque en tu caso parece que no lo es)
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compilación de múltiples archivos."
        }
    ],
    "version": "2.0.0"
}
